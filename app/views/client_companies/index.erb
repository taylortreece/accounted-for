<h1>Clients Companies:</h1>

<%if @user_client_companies.empty?%>
<p>You do not have client companies. <a href='/client-companies/new'>Add some?</a></p>
<%else%>
<a href='/client-companies/new'>Add clients companies</a>
<%@user_client_companies.each do |c|%>
<p>Name: <a href='/client-companies/<%=c.name%>'><%=c.name%></a></p>
<p>Address: <%=c.city + ", " + c.state + ". " + c.address + " " + c.zip_code.to_s%></p>
<p>Industry: <%=c.industry%></p>
<p>User Company Association: <%=c.user_company.name%></p>
<p>Discount: <%=c.discount.to_s + '%'%></p>
<a href='/client-companies/<%=c.name%>/edit'>edit</a>
<a href='/client-companies/<%=c.name%>/delete'>delete</a>
<%end%>
<%end%>

